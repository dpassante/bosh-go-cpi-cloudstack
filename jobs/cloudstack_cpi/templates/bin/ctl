#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/cloudstack_cpi/helpers/ctl_setup.sh 'cloudstack_cpi'

export PORT=${PORT:-5005}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap cloudstack_cpi bridge --config "/var/vcap/jobs/cloudstack_cpi/config/config.json" \
         >>$LOG_DIR/$JOB_NAME.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: cloudstack_cpi_ctl {start|stop}"

    ;;

esac
exit 0
